{
    /* üß† Copilot */
    // Habilita sugerencias autom√°ticas de Copilot despu√©s de cada edici√≥n.
    "github.copilot.nextEditSuggestions.enabled": true,

    /* üñ•Ô∏è Interfaz de usuario */
    // Establece el tema de color del editor.
    "workbench.colorTheme": "One Dark Pro Mix",
    // Establece el tema de √≠conos del explorador de archivos.
    "workbench.iconTheme": "symbols",
    // Establece el tema de √≠conos del producto (barra de actividad, etc.).
    "workbench.productIconTheme": "fluent-icons",
    // Coloca la barra lateral en el lado derecho.
    "workbench.sideBar.location": "right",
    // Muestra las flechas de despliegue en el explorador de archivos.
    "symbols.hidesExplorerArrows": false,

    /* üìù Editor de c√≥digo */
    // Usa las fuentes "Dank Mono" y "Cascadia Code PL" en el editor.
    "editor.fontFamily": "Dank Mono, Cascadia Code PL",
    // Habilita ligaduras tipogr√°ficas en el editor.
    "editor.fontLigatures": true,
    // Estilo de parpadeo del cursor: expansi√≥n.
    "editor.cursorBlinking": "expand",
    // Habilita animaciones suaves del cursor.
    "editor.cursorSmoothCaretAnimation": "on",
    // Formatea el c√≥digo autom√°ticamente al guardar.
    "editor.formatOnSave": true,
    // Desactiva las migas de pan (breadcrumbs).
    "breadcrumbs.enabled": false,
    // Oculta el minimapa.
    "editor.minimap.enabled": false,
    // Oculta la barra de desplazamiento vertical.
    "editor.scrollbar.vertical": "hidden",
    // Oculta la barra de desplazamiento horizontal.
    "editor.scrollbar.horizontal": "hidden",
    // Elimina el borde de la regla de vista general.
    "editor.overviewRulerBorder": false,
    // Oculta el cursor en la regla de vista general.
    "editor.hideCursorInOverviewRuler": true,
    // Desactiva el margen de glifos (como los √≠conos de breakpoint).
    "editor.glyphMargin": false,
    // Habilita edici√≥n vinculada (√∫til para renombrar etiquetas HTML, por ejemplo).
    "editor.linkedEditing": true,
    // Desactiva la coincidencia de corchetes.
    "editor.matchBrackets": "never",
    // Habilita el scroll sticky para mantener visibles encabezados de bloques.
    "editor.stickyScroll.enabled": true,
    // Muestra gu√≠as visuales para pares de corchetes.
    "editor.guides.bracketPairs": true,
    // Usa diferentes colores por tipo de par de corchetes.
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    // Resalta visualmente el par de corchetes activo.
    "editor.guides.highlightActiveBracketPair": true,
    // Desactiva las gu√≠as de indentaci√≥n.
    "editor.guides.indentation": false,

    /* üìÇ Archivos */
    // Guarda autom√°ticamente los archivos despu√©s de un peque√±o retraso.
    "files.autoSave": "afterDelay",

    /* üî§ JavaScript / TypeScript */
    // Siempre actualiza autom√°ticamente las importaciones al mover archivos.
    "javascript.updateImportsOnFileMove.enabled": "always",

    /* üß≤ Terminal */
    // Usa Git Bash como terminal predeterminado en Windows.
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // Establece la fuente del terminal a "Dank Mono".
    "terminal.integrated.fontFamily": "Dank Mono",
    // Variables de entorno personalizadas para terminal en Windows (vac√≠o por ahora).
    "terminal.integrated.env.windows": {},

    /* üìè Extensiones / Plugins personalizados */
    // Configuraci√≥n del plugin "indenticator" (gu√≠a visual de indentaci√≥n).
    "indenticator.width": 1,
    "indenticator.color.dark": "rgba(255, 255, 255, 0.1)",
}
